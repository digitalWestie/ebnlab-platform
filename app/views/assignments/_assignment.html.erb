<div class="flex hover:bg-gray-50 focus:bg-gray-100" tabindex="0">
  <div class="w-1/3 border-r px-8 py-4"><%= assignment.user.email %></div>
  <div class="w-1/3 border-r px-8 py-4">
    <%= button_to rerole_assignment_path(assignment), method: :patch, form: {}, form_class: "inline-block", title: "Change this role to: #{assignment.next_role}", class: "inline-block mr-2 cursor-pointer px-2 py-1 rounded bg-orange-100 text-orange-800 hover:bg-orange-200" do %>
       <%= content_tag :span, "«", class: "font-bold rotate-90 inline-block" if assignment.is_admin? %>
       <span><%= t("roles.#{assignment.role}") %></span>
    <% end %>
  </div>
  <div class="w-1/3 px-8 py-4">
    <%= button_to assignment_path(assignment), method: :delete, form: { data: { turbo_confirm: "Are you sure you want to remove #{assignment.user.email} from your #{assignment.assignable_type}?" } }, form_class: "inline-block", class: "inline-block mr-2 cursor-pointer px-2 py-1 rounded bg-red-100 text-red-800 hover:bg-red-200" do %>
      <span>✖ Remove</span>
    <% end %>
  </div>
</div>
